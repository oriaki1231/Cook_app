!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title CookApp
    = csrf_meta_tags
    = csp_meta_tag
    %link{:crossorigin => "anonymous", :href => "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css", :integrity => "sha256-UzFD2WYH2U1dQpKDjjZK72VtPeWP50NoJjd26rnAdUI=", :rel => "stylesheet"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    - if flash[:notice]
      .notification.is-info
        %p.notice= notice
    - if flash[:alert]
      .notification.is-danger
        %p.alert= alert
    %nav.navbar.is-dark
      .navbar-brand
        = link_to root_path, class: "navbar-item" do
          %h1.title.is-4{:style => "font-family: cursive;"} Cook app
        - if user_signed_in?
          .navbar-item
            = link_to "レシピ一覧", recipes_path, class: "navbar-item button is-dark"
          .navbar-item
            = link_to "レシピ投稿", new_recipe_path, class: "navbar-item button is-dark"
          .navbar-item
            = link_to "ユーザーリスト", users_path, class: "navbar-item button is-dark"
          .navbar-item
            = link_to "マイページ", user_path(current_user), class: "navbar-item button is-dark"
          .navbar-item
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "navbar-item button is-dark"
        - else
          .navbar-item
            = link_to "レシピ一覧", recipes_path, class: "navbar-item button is-warning is-light"
          .navbar-item
            = link_to "レシピ投稿", new_recipe_path, class: "navbar-item button is-warning is-light"
          .navbar-item
            = link_to "ユーザーリスト", users_path, class: "button is-warning is-light"
          .navbar-item
            = link_to "ログイン", new_user_session_path, class: "button is-warning is-light"
          .navbar-item
            = link_to "新規登録", new_user_registration_path, class: "button is-warning is-light"
    = yield
